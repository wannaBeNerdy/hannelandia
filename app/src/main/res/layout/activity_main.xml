<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main image and headings -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/MainImage"
                    style="@style/MainImage"
                    android:adjustViewBounds="true"
                    android:src="@drawable/hannelandia_img" />


                <TextView
                    android:id="@+id/hannelandia"
                    style="@style/Hannelandia"
                    android:text="@string/app_name" />

                <TextView
                    android:id="@+id/subheading"
                    style="@style/Subheading"
                    android:text="@string/subname" />

            </RelativeLayout>

            <!-- Description and date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    style="@style/Description"
                    android:text="@string/description" />

                <TextView
                    style="@style/Date"
                    android:text="@string/date" />
            </LinearLayout>

            <!-- Icons and descriptions -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/Address"
                    style="@style/Address"
                    android:src="@drawable/Address" />

                <TextView
                    android:id="@+id/Address.text"
                    style="@style/Address.text"
                    android:text="@string/address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/Price"
                    style="@style/Price"
                    android:src="@drawable/Price" />

                <TextView
                    style="@style/Price.text"
                    android:text="@string/price" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    style="@style/Info"
                    android:src="@drawable/Info" />

                <TextView
                    style="@style/Info.text"
                    android:text="@string/info" />
            </LinearLayout>

            <Button
                style="@style/Register"
                android:text="@string/register" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>